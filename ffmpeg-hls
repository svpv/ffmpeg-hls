#!/bin/bash -efu

av0dir=
hlsdirs=()
argv=("$@")

for (( i = 1; i < $#; i++ )); do
	[[ ${argv[i-1]} = -i && ${argv[i]} = http://* ]] || continue
	if [ -z "$av0dir" ]; then
		av0=$(readlink -ev "$0")
		av0dir=$(dirname "$av0")
	fi
	argv[i]=$("$av0dir"/wget-hls "${argv[i]}")
	argv[i]=${argv[i]#* }
	hlsdirs+=("${argv[i]%/*}")
done

ffmpeg=ffmpeg

if [ "${0##*/}" = ffmpeg ]; then
	while read -r ffmpeg; do
		if [ "$ffmpeg" = "$0" ]; then
			ffmpeg=
		else
			break
		fi
	done < <(type -aP ffmpeg)
	if [ -z "$ffmpeg" ]; then
		echo >&2 "$0: cannot find ffmpeg binary"
		false
	fi
fi

if [ "$*" = "${argv[*]-}" ]; then
	exec "$ffmpeg" "$@"
fi

rc=
if "$ffmpeg" "${argv[@]}"; then
	rm -r "${hlsdirs[@]}"
else
	rc=$?
	echo >&2 "$0: ffmpeg failed, keeping ${hlsdirs[*]}"
fi

exit $rc
